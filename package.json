{
  "name": "@iobroker/plugin-docker",
  "version": "0.2.0",
  "description": "Docker module for plugins for js-controller and adapters",
  "author": {
    "name": "Denis Haev",
    "email": "dogafox@gmail.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js",
      "types": "./build/esm/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "postbuild": "esm2cjs --in build/esm --out build/cjs -l error -t node18 && node tasks",
    "build": "tsc -p tsconfig.build.json && npm run postbuild",
    "lint": "eslint -c eslint.config.mjs",
    "prepublishOnly": "npm run build",
    "test:integration": "mocha --exit",
    "test": "npm run test:integration",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioBroker/plugin-docker.git"
  },
  "keywords": [
    "iobroker",
    "adapter",
    "plugins",
    "Sentry"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ioBroker/plugin-docker/issues"
  },
  "homepage": "https://github.com/ioBroker/plugin-docker#readme",
  "dependencies": {
    "@iobroker/plugin-base": "^3.0.3",
    "source-map-support": "^0.5.21",
    "dockerode": "^4.0.9",
    "js-yaml": "^4.1.1",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@alcalzone/esm2cjs": "^1.4.2",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/db-states-redis": "^7.1.0",
    "@iobroker/db-objects-redis": "^7.1.0",
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@iobroker/types": "^7.1.0",
    "@types/dockerode": "^4.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@types/tar-fs": "^2.0.4",
    "mocha": "^11.7.5",
    "typescript": "~5.9.3"
  }
}
